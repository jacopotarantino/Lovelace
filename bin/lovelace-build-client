#!/usr/bin/env node

var exec = require('child_process').exec,
    argv = require('yargs').argv,
    component_path = argv.root_component_path

if (!component_path) {
  console.error('Please provide a path to your components directory.')
  console.error('Example: "--root_component_path=./components"')
}

exec('bower install && grunt build_client_files --root_component_path=' + component_path, {
  cwd: __dirname + '/../'
}, function(error, stdout, stderr) {
  if (!error) {
    console.log('Built client files!')
  }
})
